  <style lang="scss">
    // services.scss
    @use '@styles/base/mixins/grid.scss' as grid;

    .services {
      &__container {
      }

      &__slider {
      }

      &__wrapper {
        display: flex;
        padding: var(--space-md) 1px;
        //599px и более
        @media (min-width: $mobile-large) {
          @include grid.grid-2-columns(var(--space-grid-gap));
        }
        //1023px и более
        @media (min-width: $tablet-medium) {
          @include grid.grid-3-columns(var(--space-grid-gap));
        }
