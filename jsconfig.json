{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@scripts/*": ["src/scripts/*"],
      "@assets/*": ["src/assets/*"],
      "@layouts/*": ["src/layouts/*"],
      "@fonts/*": ["public/fonts/*"],
      "@images/*": ["public/images/*"],
      "@icons/*": ["public/icons/*"],
      "@favicon/*": ["public/favicon/*"]
    },
    "checkJs": false,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
