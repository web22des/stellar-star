---
// Используем встроенный Image из astro:assets
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width: number;
  height?: number;
  loading?: 'eager' | 'lazy';
  formats?: Array<'avif' | 'webp' | 'png' | 'jpeg' | 'svg'>;
  quality?: number;
  class?: string;
}

const { src, alt, width, height, loading = 'lazy', formats = ['webp'], quality = 80, class: className } = Astro.props;
---

<Image src={src} alt={alt} width={width} height={height} formats={formats} quality={quality} loading={loading} class={className} />
